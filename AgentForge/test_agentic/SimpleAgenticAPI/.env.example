# .env.example

# Application settings
PORT=3000
NODE_ENV=development

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/

# Secret keys for JWT and encryption
JWT_SECRET_KEY=${JWT_SECRET_KEY:-secret_key_for_jwt}
ENCRYPTION_SECRET_KEY=${ENCRYPTION_SECRET_KEY:-secret_key_for_encryption}

# API endpoints for task management and user authentication
TASKS_API_ENDPOINT=/api/tasks
USERS_API_ENDPOINT=/api/users

# Logging configuration
LOG_LEVEL=debug
LOG_FILE=log/express.log
LOG_DIR=log/

# Email settings for password reset and notifications (optional)
EMAIL_SERVICE_PROVIDER=smtp.gmail.com
EMAIL_FROM_ADDRESS=${EMAIL_FROM_ADDRESS:-your_email@gmail.com}
EMAIL_PASSWORD=${EMAIL_PASSWORD:-yours_password}

# Add error handling by specifying environment variables that must be set in production
MONGODB_URI_ERROR="DB_CONNECTION_STRING_NOT_SET"
JWT_SECRET_KEY_ERROR="JWT_SECRET_KEY_NOT_SET"
