# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
PROJECT_NAME={{project_name}}
VERSION={{spec.version}}
DEBUG=true
ENVIRONMENT=development

{% if spec.requires_database() -%}
# Database Configuration
DATABASE_URL={{plan.configuration.database_url}}
{% if spec.db == "postgres" -%}
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppass
POSTGRES_DB=appdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
{% elif spec.db == "mysql" -%}
MYSQL_USER=appuser
MYSQL_PASSWORD=apppass
MYSQL_DATABASE=appdb
MYSQL_HOST=localhost
MYSQL_PORT=3306
{% endif %}
{% endif %}

{% if spec.has_authentication() -%}
# Authentication Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
{% if spec.auth == "jwt" -%}
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
{% endif %}
{% endif %}

# Server Configuration
{% if spec.web -%}
HOST=0.0.0.0
PORT={{plan.configuration.port}}
{% endif %}

# CORS Settings (for web APIs)
{% if spec.web -%}
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOW_CREDENTIALS=true
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*
{% endif %}

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

{% if "rate_limit" in spec.features -%}
# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
{% endif %}

# External Services (add as needed)
# REDIS_URL=redis://localhost:6379/0
# SMTP_HOST=localhost
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=

# Security Settings
{% if spec.security == "strict" -%}
SECURE_COOKIES=true
HTTPS_ONLY=true
{% else -%}
SECURE_COOKIES=false
HTTPS_ONLY=false
{% endif %}

# Development/Testing
TEST_DATABASE_URL=sqlite:///./test.db
