name: CI
on:
  push:
  pull_request:
jobs:
  build-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: docker/setup-buildx-action@v3
      - name: Build
        run: docker compose build
      - name: Test
        run: docker compose run --rm api pytest -q
      - name: Lint/Sec
        run: |
          docker compose run --rm api ruff src
          docker compose run --rm api bandit -r src -x tests
          docker compose run --rm api pip-audit -r requirements.txt || true
